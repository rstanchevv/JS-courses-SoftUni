<section id="catalog-section">

    <h1 class="item">
        {{auction.title}}
        {{#if isOwner}}
        <a href="/auctions/{{auction._id}}/edit" class="action">Edit</a>
        <a href="/auctions/{{auction._id}}/delete" class="action">Delete</a>
        {{/if}}
    </h1>
    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{auction.image}}" alt="" {{auction.title}} class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>{{auction.category}}</strong></p>
                <p>{{auction.description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{auction.price}}</strong>
                    </div>

                    {{#if isOwner}}
                    {{#unless hasBidder}}
                    <div>
                        No bids
                    </div>
                    {{else}}
                    <div>
                        Bid By: <strong>{{auction.bidder.firstName}} {{auction.bidder.lastName}}</strong>
                    </div>
                    {{/unless}}
                    {{/if}}

                    {{#if isAuthenticated}}
                    {{#unless isOwner}}
                    {{#unless isBidder}}
                    <!-- If current user can place a bid -->
                    <form class="vertical" method="post" action="#">
                        <label><span>Bid amount</span><input type="number" name="bidSum"></label>
                        <input class="action" type="submit" value="Place bid">
                    </form>
                    {{/unless}}
                    {{/unless}}
                    {{/if}}

                    {{#if isBidder}}
                    {{#unless isGuest}}
                    <div>
                        You are currently the <strong>highest bidder</strong> for this auction
                    </div>
                    {{/unless}}
                    {{/if}}

                </div>

            </div>
        </div>

        <footer>Listed by Peter Jackson</footer>
    </div>

</section>