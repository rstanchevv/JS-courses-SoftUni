<main>
    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div>
    {{/if}}
    <section id="details-info">
        <h1>Details</h1>
        <div class="coin-image">
            <img src="{{crypto.image}}">
        </div>

        <div class="coin-info">
            <div class="coin-text">
                <h1 id="name">{{crypto.name}}</h1>
                <h3 id="payment">Payment method: {{crypto.paymentMethod}}</h3>
                <p id="price"><span>Price: ${{crypto.price}}</span></p>
                <p id="description">{{crypto.description}}</p>
            </div>
            <div class="product-btn">
                {{#if isOwner}}
                <div class="author">
                    <a href="/cryptos/{{crypto._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/cryptos/{{crypto._id}}/delete" class="btn-delete">Delete</a>
                </div>
                {{/if}}
                {{#if isAuthenticated}}
                {{#unless isOwner}}
                {{#unless alreadyBought}}
                <a href="/cryptos/{{crypto._id}}/buy" class="btn-buy">Buy</a>
                {{/unless}}
                {{/unless}}
                {{/if}}
                {{#if alreadyBought}}
                {{#unless isOwner}}
                {{#unless isGuest}}
                <p class="buy-message">You already bought these crypto coins.</p>
                {{/unless}}
                {{/unless}}
                {{/if}}
            </div>
        </div>
    </section>
</main>