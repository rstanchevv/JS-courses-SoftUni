<main class="search">
    <!-- Search Page (Only for logged-in users) -->
    <section id="search">
        <h2>Search by Location</h2>

        <form class="search-wrapper cf" method="POST" action="#">
            <input id="#search-input" type="text" name="location" placeholder="Search here..." required />
            <button type="submit">Search</button>
        </form>

        <div id="search-container">
            <ul class="card-wrapper">
                {{#each animals}}
                {{>searchAnimal}}
                {{else}}
                <div id="no-post">
            <h2>There are no results found.</h2>
                </div>
                {{/each}}
            </ul>


        </div>
    </section>
</main>