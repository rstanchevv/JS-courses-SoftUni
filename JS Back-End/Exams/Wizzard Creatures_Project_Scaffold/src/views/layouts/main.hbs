                {{#if isAuthenticated}}
                <li><a href="/posts/create">Create Post</a></li>
                <li><a href="/users/profile/{{user._id}}">Profile</a></li>
                <li><a href="/users/logout">Logout</a></li>
                {{else}}
                <li><a href="/users/register">Register</a></li>
                <li><a href="/users/login">Login</a></li>
                {{/if}}
            </ul>

        </nav>

